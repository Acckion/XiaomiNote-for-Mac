{
  "info": {
    "_postman_id": "audio-file-support-collection",
    "name": "小米笔记语音文件支持测试",
    "description": "用于测试语音文件解析和上传功能的 Postman 测试集合",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
